<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <locale-config>
            <default-locale>fr</default-locale>
            <supported-locale>ar</supported-locale>
            <supported-locale>fr</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/Bundle2</base-name>
            <var>bundle2</var>
        </resource-bundle>
    </application>
    
    <lifecycle>
        <phase-listener>com.magma.session.SmartSession</phase-listener>
    </lifecycle>
    
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>Acceuil</from-outcome>
            <to-view-id>/acceuil/Acceuil.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>Deconnexion</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>
    
    <managed-bean>
        <managed-bean-name>authentification</managed-bean-name>
        <managed-bean-class>com.magma.session.AuthentificationController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    
</faces-config>
